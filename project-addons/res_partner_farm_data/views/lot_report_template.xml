<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="lot_report">

            <t t-call="report.html_container">
                <t t-call="report.external_layout">
                    <div class="page">
                        <t t-foreach="docs" t-as="o">
                            <table  class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Ingrediente</th>
                                        <t t-foreach="lots[o.id]" t-as="lot">
                                            <th><span t-field="lot.name"/></th>
                                        </t>
                                        <th>Total</th>
                                        <th>Ración media</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="product_lines[o.id]" t-as="product_line">
                                        <tr>
                                            <td><span t-field="product_line['product'].name"/></td>
                                            <t t-foreach="[x for x in product_line.keys() if x  not in ('product', 'total', 'ration')]" t-as="detail_key">
                                                <td><span t-esc="product_line[detail_key]"/></td>
                                            </t>
                                            <td><span t-esc="product_line['total']"/></td>
                                            <td><span t-esc="product_line['ration']"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td></td>
                                        <t t-foreach="totals[o.id].keys()" t-as="total">
                                            <td><span t-esc="totals[o.id][total]"/></td>
                                        </t>
                                    </tr>
                                </tfoot>
                            </table>

                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <t t-foreach="lots[o.id]" t-as="lot">
                                            <th><span t-field="lot.name"/></th>
                                        </t>
                                        <th>Total rebaño lactación</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="table_keys" t-as="table_key">
                                        <tr>
                                            <td><span t-esc="table[table_key]['title']"/></td>
                                            <t t-foreach="range(0, len(lots[o.id]))" t-as="lot_key">
                                                <td><span t-esc="table[table_key][lot_key]"/></td>
                                            </t>
                                            <td><span t-esc="table[table_key]['total']"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                    </div>
                </t>
            </t>
        </template>
    </data>
</openerp>
