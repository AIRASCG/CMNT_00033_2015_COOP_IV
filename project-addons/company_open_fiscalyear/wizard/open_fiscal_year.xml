<openerp>
    <data>

        <record id="company_open_fiscal_year_form" model="ir.ui.view">
            <field name="name">company.open.fiscal.year.form</field>
            <field name="model">company.open.fiscal.year</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="">
                    <group>
                        <field name="year"/>
                    </group>
                    <footer>
                        <button name="open_fiscalyear" string="Open" type="object" class="oe_highlight" confirm="This action will close the current fiscal year and a new one will be created for the company and its children."/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window name="Open fiscal year"
            res_model="company.open.fiscal.year"
            view_id="company_open_fiscal_year_form"
            view_mode="form"
            target="new"
            id="company_open_fiscal_year_action"/>

    </data>
</openerp>
